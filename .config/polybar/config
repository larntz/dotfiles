;cursor-scroll = ns-resize

;; ========================
;; modules

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
click-middle = pavucontrol
click-right = pavucontrol
format-volume = <label-volume> <ramp-volume> 
format-padding-right = 1
label-volume = %percentage:2%%
ramp-volume-0 = %{T3}奄%{T0} 
ramp-volume-1 = %{T3}奔%{T0}
ramp-volume-2 = %{T3}墳%{T0}
ramp-volume-foreground = ${colors.bg-blue}

label-muted = %{T3}ﱝ%{T0} %percentage:2%%
format-muted = <label-muted>
format-muted-margin = 1
format-muted-foreground = ${colors.bg-blue}

[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

[module/cpu]
type = internal/cpu
interval = 2
format = <label> <ramp-load>
format-padding-right = 1
label = %percentage:2%%
label-foreground = ${colors.foreground}
ramp-load-0 = %{T3} %{T-}
ramp-load-1 = %{T3} %{T-}
ramp-load-2 = %{T3} %{T-}
ramp-load-3 = %{T3} %{T-}
ramp-load-4 = %{T3} %{T-}
ramp-load-5 = %{T3} %{T-}
ramp-load-0-foreground = ${colors.bg-blue}
ramp-load-1-foreground = ${colors.bg-blue}
ramp-load-2-foreground = ${colors.bg-blue}
ramp-load-3-foreground = ${colors.bg-orange}
ramp-load-4-foreground = ${colors.bg-yellow}
ramp-load-5-foreground = ${colors.bg-red}

[module/memory]
type = internal/memory
interval = 2 
format = <label> <ramp-used>
format-padding = 1
label = %percentage_used:2%%
label-foreground = ${colors.fg}
; %{0-35} offset to left so it mushes against the cpu gauge
ramp-used-0 = %{T3} %{T-}
ramp-used-1 = %{T3} %{T-}
ramp-used-2 = %{T3} %{T-}
ramp-used-3 = %{T3} %{T-}
ramp-used-4 = %{T3} %{T-}
ramp-used-0-foreground = ${colors.bg-blue}
ramp-used-1-foreground = ${colors.bg-blue}
ramp-used-2-foreground = ${colors.bg-orange}
ramp-used-3-foreground = ${colors.bg-yellow}
ramp-used-4-foreground = ${colors.bg-red}

[module/weather]
type = custom/script
exec = $HOME/.config/polybar/weather.sh
format-padding-right = 1 
interval = 60

[module/dunst]
type = custom/ipc
initial = 1
format-foreground = ${colors.bg-blue}
format-padding = 1
hook-0 = echo "%{A1:notify-send "DUNST_COMMAND_PAUSE" && polybar-msg hook dunst 2:}%{A}" &
hook-1 = echo "%{A1:notify-send "DUNST_COMMAND_RESUME" && polybar-msg hook dunst 1:}%{A}" &


[module/date]
type = internal/date
#date = %Y-%m-%d %H:%M
date = %A, %B %d %H:%M
interval = 5
label-font = 1

[module/music]
type = custom/script
exec = $HOME/.config/polybar/now-playing.sh
click-left = playerctl play-pause
click-right = playerctl next
interval = 1
format = <label>
label-alignment = left 
label-minlen = 50
label-maxlen = 50
format-margin = 3
format-padding = 2
format-background = ${colors.bg-blue} 
format-foreground = ${colors.bg-darker}

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = false
;format = <label-monitor> <label-state>
format = <label-state>
;label-focused-foreground = ${colors.foreground-alt}
format-margin = 2
label-focused = %index:2%
label-empty = 
label-dimmed = 
label-urgent = 
label-occupied = 
